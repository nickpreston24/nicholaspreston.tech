{
  "name": "@bit/bit.envs.compilers.react-typescript",
  "version": "3.1.53",
  "homepage": "https://bit.dev/bit/envs/compilers/react-typescript",
  "main": "dist/react-typescript/src/index.js",
  "dependencies": {
    "fs-extra": "8.1.0",
    "recursive-readdir": "^2.2.2",
    "lodash": "^4.17.15",
    "chai": "4.2.0",
    "@bit/bit.envs.compilers.typescript": "3.1.47",
    "@bit/bit.envs.common.compiler-types": "0.0.15",
    "@bit/bit.envs.common.preset": "0.0.15"
  },
  "devDependencies": {
    "@types/recursive-readdir": "^2.2.0",
    "@types/lodash": "^4.14.149",
    "bit-bin": "14.6.0",
    "rimraf": "3.0.0",
    "@types/node": "^12.7.4",
    "@types/mocha": "^5.2.7",
    "@bit/bit.envs.common.build-component": "0.0.18",
    "@bit/bit.envs.common.create-workspace": "0.0.10"
  },
  "peerDependencies": {},
  "license": "SEE LICENSE IN LICENSE",
  "bit": {
    "env": {
      "compiler": {
        "bit.envs/compilers/typescript@3.1.46": {
          "rawConfig": {
            "compilerPath": "typescript/bin/tsc",
            "compilerArguments": [
              "--declaration"
            ],
            "compiledFileTypes": [
              ".ts",
              ".tsx"
            ],
            "configFileName": "tsconfig.json",
            "tsconfig": {
              "compilerOptions": {
                "outDir": "dist",
                "target": "ES2015",
                "sourceMap": false,
                "moduleResolution": "Node",
                "esModuleInterop": true,
                "module": "CommonJS",
                "allowSyntheticDefaultImports": true,
                "resolveJsonModule": true,
                "declaration": true,
                "experimentalDecorators": true,
                "inlineSourceMap": false,
                "inlineSources": false,
                "jsx": "react",
                "rootDir": "./",
                "removeComments": true,
                "typeRoots": [
                  "./node_modules/@types"
                ],
                "importHelpers": false,
                "skipLibCheck": true
              },
              "include": [
                "./**/*"
              ],
              "exclude": [
                "node_modules",
                "dist",
                ".dependencies",
                "*.spec.ts",
                "*.e2e.ts"
              ]
            },
            "development": false,
            "copyPolicy": {
              "ignorePatterns": [
                "package.json",
                "package-lock.json",
                "tsconfig.json"
              ],
              "disable": false
            }
          },
          "options": {},
          "files": {}
        }
      }
    },
    "overrides": {
      "dependencies": {
        "bit-bin": "-"
      },
      "devDependencies": {
        "@types/node": "+",
        "@types/mocha": "^5.2.7",
        "bit-bin": "14.6.0"
      }
    }
  }
}
